<div class="heading-resource">
  <label class="resource-label" for="system.alienationCost">Alienation Cost</label>
  <input type="number" name="system.alienationCost" value="{{system.alienationCost}}" data-dtype="Number"/>
</div>
<hr>
{{!-- Chrome Syndromes --}}
<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">Chrome Syndromes</div>
    <div class="item-stats">Effect</div>
    <div class="item-stats" title="Maximum Alienation Score Modifier">Alien. Mod</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create Chrome Syndrome" data-type="chromeSyndrome"><i class="fas fa-plus"></i> Add</a>
    </div>
  </li>
  {{#each chromeSyndrome as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="rollable" data-roll-type="chromeSyndrome"><img class="rollable-img" src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
        </div>
        <h4 class="expandable">{{item.name}}</h4>
      </div>
      <div class="item-stats">
        <h4>{{item.system.effect}}</h4>
      </div>
      <div class="item-stats">
        <h4>{{item.system.maxAlienationMod}}</h4>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit Chrome Syndrome"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete Chrome Syndrome"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    <div class="item-description hidden">{{{item.system.description}}}</div>
  {{/each}}
</ol>