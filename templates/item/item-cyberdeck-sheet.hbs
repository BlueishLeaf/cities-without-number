<form class="{{cssClass}} flexcol" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
      <div class="grid grid-3col">
        <div class="resource">
          <label class="resource-label">Quantity</label>
          <input type="text" name="system.quantity" value="{{system.quantity}}" data-dtype="Number"/>
        </div>
        <div class="resource">
          <label class="resource-label">Encumbrance</label>
          <input type="text" name="system.encumbrance" value="{{system.encumbrance}}" data-dtype="Number"/>
        </div>
        <div class="resource">
          <label class="resource-label">Cost</label>
          <input type="text" name="system.cost" value="{{system.cost}}" data-dtype="Number"/>
        </div>
      </div>
    </div>
  </header>

  {{!-- Other Header Attributes --}}
  <header class="sheet-header">
    <div class="header-fields">
      <div class="grid grid-4col">
        <div class="resource">
          <label class="resource-label">Bonus Access</label>
          <input type="text" name="system.bonusAccess" value="{{system.bonusAccess}}" data-dtype="Number"/>
        </div>
        <div class="resource">
          <label class="resource-label">Memory</label>
          <input type="text" name="system.memory" value="{{system.memory}}" data-dtype="Number"/>
        </div>
        <div class="resource">
          <label class="resource-label">Shielding</label>
          <input type="text" name="system.shielding" value="{{system.shielding}}" data-dtype="Number"/>
        </div>
        <div class="resource">
          <label class="resource-label">CPU</label>
          <input type="text" name="system.cpu" value="{{system.cpu}}" data-dtype="Number"/>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="programs">Programs</a>
    <a class="item" data-tab="mods">Mods</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    {{!-- Description Tab --}}
    <div class="tab max-height" data-group="primary" data-tab="description">
      {{editor system.description target="system.description" engine="prosemirror" button=true editable=editable}}
    </div>

    {{!-- Programs Tab --}}
    <div class="tab" data-group="primary" data-tab="programs">
      <ol class="items-list">
        <li class="item flexrow items-header">
          <div class="item-name">Verbs</div>
          <div class="item-stats">Access</div>
          <div class="item-stats">Mod</div>
          <div class="item-stats" title="Self-Terminating">Self-Term.</div>
          <div class="item-stats">Targets</div>
          <div class="item-controls">
            <a class="item-control item-create" title="Create Verb" data-type="verb"><i class="fas fa-plus"></i> Add</a>
          </div>
        </li>
        {{#each verbs as |verb id|}}
          <li class="item flexrow" data-item-id="{{verb._id}}">
            <div class="item-name">
              <div class="item-image">
                <a class="rollable" data-roll-type="verb"><img class="rollable-img" src="{{verb.img}}" title="{{verb.name}}" width="24" height="24"/></a>
              </div>
              <h4 class="expandable">{{verb.name}}</h4>
            </div>
            <div class="item-stats">
              <h4>{{verb.system.accessCost}}</h4>
            </div>
            <div class="item-stats">
              <h4>{{verb.system.skillCheckMod}}</h4>
            </div>
            <div class="item-stats">
              <h4>{{verb.system.selfTerminating}}</h4>
            </div>
            <div class="item-stats">
              <h4>{{verb.system.targetTypes}}</h4>
            </div>
            <div class="item-controls">
              <a class="item-control item-edit" title="Edit Verb"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Verb"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          <div class="item-description hidden">{{{verb.system.description}}}</div>
        {{/each}}
      </ol>
      <ol class="items-list">
        <li class="item flexrow items-header">
          <div class="item-name">Subjects</div>
          <div class="item-stats">Type</div>
          <div class="item-controls">
            <a class="item-control item-create" title="Create Subject" data-type="subject"><i class="fas fa-plus"></i> Add</a>
          </div>
        </li>
        {{#each subjects as |subject id|}}
        <li class="item flexrow" data-item-id="{{subject._id}}">
          <div class="item-name">
            <div class="item-image">
              <a class="rollable" data-roll-type="subject"><img class="rollable-img" src="{{subject.img}}" title="{{subject.name}}" width="24" height="24"/></a>
            </div>
            <h4 class="expandable">{{subject.name}}</h4>
          </div>
          <div class="item-stats">
            <h4>{{subject.system.type}}</h4>
          </div>
          <div class="item-controls">
            <a class="item-control item-edit" title="Edit Subject"><i class="fas fa-edit"></i></a>
            <a class="item-control item-delete" title="Delete Subject"><i class="fas fa-trash"></i></a>
          </div>
        </li>
        <div class="item-description hidden">{{{subject.system.description}}}</div>
        {{/each}}
      </ol>
    </div>

    {{!-- Mods Tab --}}
    <div class="tab" data-group="primary" data-tab="mods">
      <ol class="items-list">
        <li class="item flexrow items-header">
          <div class="item-name">Mods</div>
          <div class="item-controls">
            <a class="item-control item-create" title="Create Mod" data-type="mod"><i class="fas fa-plus"></i> Add</a>
          </div>
        </li>
        {{#each mods as |mod id|}}
          <li class="item flexrow" data-item-id="{{mod._id}}">
            <div class="item-name">
              <div class="item-image">
                <a class="rollable" data-roll-type="mod"><img class="rollable-img" src="{{mod.img}}" title="{{mod.name}}" width="24" height="24"/></a>
              </div>
              <h4 class="expandable">{{mod.name}}</h4>
            </div>
            <div class="item-controls">
              <a class="item-control item-edit" title="Edit Mod"><i class="fas fa-edit"></i></a>
              <a class="item-control item-delete" title="Delete Mod"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          <div class="item-description hidden">{{{mod.system.description}}}</div>
        {{/each}}
      </ol>
    </div>
  </section>
</form>
