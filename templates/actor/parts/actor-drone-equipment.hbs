{{!-- Headers --}}
<div class="resources grid grid-3col">
  <div class="resource flex-group-center">
    <label for="system.cargoEncumbrance.stowed.value" class="resource-label">Stowed Cargo</label>
    <div class="resource-content flexrow flex-center flex-between">
    <input type="number" name="system.cargoEncumbrance.stowed.value" disabled value="{{system.cargoEncumbrance.stowed.value}}" data-dtype="Number"/>
    <i class="fas fa-slash-forward"></i>
    <input type="number" name="system.cargoEncumbrance.stowed.max" value="{{system.cargoEncumbrance.stowed.max}}" data-dtype="Number"/>
    </div>
  </div>

  <div class="resource flex-group-center">
    <label class="resource-label">Fittings</label>
    <div class="resource-content flexrow flex-center flex-between">
      <input type="number" name="system.fittings.value" disabled value="{{system.fittings.value}}" data-dtype="Number"/>
      <i class="fas fa-slash-forward"></i>
      <input type="number" name="system.fittings.max" value="{{system.fittings.max}}" data-dtype="Number"/>
    </div>
  </div>

  <div class="resource flex-group-center">
    <label class="resource-label">Hardpoints</label>
    <div class="resource-content flexrow flex-center flex-between">
      <input type="number" name="system.hardpoints.value" disabled value="{{system.hardpoints.value}}" data-dtype="Number"/>
      <i class="fas fa-slash-forward"></i>
      <input type="number" name="system.hardpoints.max" value="{{system.hardpoints.max}}" data-dtype="Number"/>
    </div>
  </div>
</div>

