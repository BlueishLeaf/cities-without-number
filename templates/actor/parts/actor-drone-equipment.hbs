{{!-- Inventory --}}
{{> "systems/cities-without-number/templates/actor/parts/actor-inventory.hbs" showReadied=false}}

{{!-- Fittings --}}
<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">Fittings</div>
    <div class="item-stats">Quantity</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create Fitting" data-type="fitting"><i class="fas fa-plus"></i> Add</a>
    </div>
  </li>
  {{#each fitting as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="rollable" data-roll-type="fitting"><img class="rollable-img" src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
        </div>
        <h4 class="expandable">{{item.name}}</h4>
      </div>
      <div class="item-stats">
        <h4>{{item.system.quantity}}</h4>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit Fitting"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete Fitting"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    <div class="item-description hidden">{{{item.system.description}}}</div>
  {{/each}}
</ol>

