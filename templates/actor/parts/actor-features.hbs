<!-- Edges -->
<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">Edges</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create Edge" data-type="edge"><i class="fas fa-plus"></i> Add</a>
    </div>
  </li>
  {{#each edge as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="rollable" data-roll-type="edge"><img class="rollable-img" src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
        </div>
        <h4 class="expandable">{{item.name}}</h4>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit Edge"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete Edge"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    <div class="item-description hidden">{{{item.system.description}}}</div>
  {{/each}}
</ol>

