<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">Edges</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create custom edge" data-type="edge"><i class="fas fa-plus"></i> Add</a>
    </div>
  </li>
  {{#each edges as |edge id|}}
  <li class="item flexrow" data-item-id="{{edge._id}}">
    <div class="item-name">
      <div class="item-image">
        <a class="rollable" data-roll-type="edge"><img class="rollable-img" src="{{edge.img}}" title="{{edge.name}}" width="24" height="24"/></a>
      </div>
      <h4 class="expandable">{{edge.name}}</h4>
    </div>
    <div class="item-controls">
      <a class="item-control item-edit" title="Edit edge"><i class="fas fa-edit"></i></a>
      <a class="item-control item-delete" title="Delete edge"><i class="fas fa-trash"></i></a>
    </div>
  </li>
  <div class="item-description hidden">{{edge.system.description}}</div>
  {{/each}}
</ol>

<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">Foci</div>
    <div class="item-stats" title="Current Level">Cur. Level</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create foci" data-type="focus"><i class="fas fa-plus"></i> Add</a>
    </div>
  </li>
  {{#each foci as |focus id|}}
  <li class="item flexrow" data-item-id="{{focus._id}}">
    <div class="item-name">
      <div class="item-image">
        <a class="rollable" data-roll-type="focus"><img class="rollable-img" src="{{focus.img}}" title="{{focus.name}}" width="24" height="24"/></a>
      </div>
      <h4 class="expandable">{{focus.name}}</h4>
    </div>
    <div class="item-stats">
      <h4>{{focus.system.level}}</h4>
    </div>
    <div class="item-controls">
      <a class="item-control item-edit" title="Edit focus"><i class="fas fa-edit"></i></a>
      <a class="item-control item-delete" title="Delete focus"><i class="fas fa-trash"></i></a>
    </div>
  </li>
  <div class="item-description hidden">{{focus.system.description}}</div>
  {{/each}}
</ol>