<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">Edges</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create custom edge" data-type="item"><i class="fas fa-plus"></i> Add Edge</a>
    </div>
  </li>
  {{#each edges as |edge id|}}
    <li class="item flexrow" data-item-id="{{edge._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="rollable" data-roll-type="edge"><img src="{{edge.img}}" title="{{edge.name}}" width="24" height="24"/></a>
        </div>
        <h4>{{edge.name}}</h4>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit edge"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete edge"><i class="fas fa-trash"></i></a>
      </div>
    </li>
  {{/each}}
</ol>

<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">Foci</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create foci" data-type="foci"><i class="fas fa-plus"></i> Add Focus</a>
    </div>
  </li>
  {{#each foci as |focus id|}}
    <li class="item flexrow" data-item-id="{{focus._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="rollable" data-roll-type="focus"><img src="{{focus.img}}" title="{{focus.name}}" width="24" height="24"/></a>
        </div>
        <h4>{{focus.name}}</h4>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit focus"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete focus"><i class="fas fa-trash"></i></a>
      </div>
    </li>
  {{/each}}
</ol>