<!-- Weapons-->
<ol class="items-list">
    <li class="item flexrow items-header">
        <div class="item-name">Weapons</div>
        {{#if showMountedStats}}
            <div class="item-stats">Power</div>
            <div class="item-stats">Mass</div>
        {{/if}}
        <div class="item-stats" title="Range (Effective/Maximum)">Range</div>
        <div class="item-stats">Magazine</div>
        <div class="item-stats" title="Encumbrance">Enc.</div>
        {{#if showReadied}}
            <div class="item-stats">Readied?</div>
        {{/if}}
        <div class="item-controls">
            <a class="item-control item-create" title="Create Weapon" data-type="weapon"><i class="fas fa-plus"></i> Add</a>
        </div>
    </li>
    {{#each weapon as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
                <div class="item-image">
                    <a class="rollable" data-roll-type="weapon"><img class="rollable-img" src="{{item.img}}"
                                                                     title="{{item.name}}" width="24" height="24"/></a>
                </div>
                <h4 class="expandable">{{item.name}}</h4>
            </div>
            {{#if ../showMountedStats}}
                <div class="item-stats">
                    <h4>{{item.system.mounted.power}}</h4>
                </div>
                <div class="item-stats">
                    <h4>{{item.system.mounted.mass}}</h4>
                </div>
            {{/if}}
            <div class="item-stats">
                {{#if item.system.hasRangedAttack}}
                    <h4>{{item.system.range.effective}}/{{item.system.range.max}}</h4>
                {{else}}
                    <h4>N/A</h4>
                {{/if}}
            </div>
            <div class="item-stats">
                {{#if item.system.hasMagazine}}
                    <h4 class="{{#ifEquals item.system.magazine.value
                                           0}}item-text-warning{{/ifEquals}}">{{item.system.magazine.value}}
                        /{{item.system.magazine.max}}</h4>
                {{else}}
                    <h4>N/A</h4>
                {{/if}}
            </div>
            <div class="item-stats">
                <h4>{{item.system.encumbrance}}</h4>
            </div>
            {{#if ../showReadied}}
                <div class="item-stats">
                    <input class="readiable" data-item-id="{{item._id}}" type="checkbox" {{isChecked
                            item.system.readied}}/>
                </div>
            {{/if}}
            <div class="item-controls">
                {{#if item.system.hasMagazine}}
                    <a class="item-control item-refresh" title="Reload Magazine"><i
                            class="fas fa-arrows-rotate"></i></a>
                {{/if}}
                <a class="item-control item-edit" title="Edit Weapon"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Weapon"><i class="fas fa-trash"></i></a>
            </div>
        </li>
        <div class="item-description hidden">{{{item.system.description}}}</div>
    {{/each}}
</ol>