<!-- Weapons-->
{{> "systems/cities-without-number/templates/actor/parts/actor-weapons.hbs" showReadied=showReadied showMountedStats=false}}

<!-- Armor -->
<ol class="items-list">
    <li class="item flexrow items-header">
        <div class="item-name">Armor</div>
        <div class="item-stats" title="Armor Class (Melee/Ranged)">AC (M/R)</div>
        <div class="item-stats" title="Trauma Target Modifier">TT Mod.</div>
        <div class="item-stats" title="Damage Soak">Dam. Soak</div>
        <div class="item-stats" title="Encumbrance">Enc.</div>
        {{#if showReadied}}
            <div class="item-stats">Readied?</div>
        {{/if}}
        <div class="item-controls">
            <a class="item-control item-create" title="Create Armor" data-type="armor"><i class="fas fa-plus"></i>
                Add</a>
        </div>
    </li>
    {{#each armor as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
                <div class="item-image">
                    <a class="rollable" data-roll-type="armor"><img class="rollable-img" src="{{item.img}}"
                                                                    title="{{item.name}}" width="24" height="24"/></a>
                </div>
                <h4 class="expandable">{{item.name}}</h4>
            </div>
            <div class="item-stats">
                <h4>{{item.system.armorClass.melee}}/{{item.system.armorClass.ranged}}</h4>
            </div>
            <div class="item-stats">
                <h4>{{item.system.traumaTargetMod}}</h4>
            </div>
            <div class="item-stats">
                <h4>{{item.system.damageSoak}}</h4>
            </div>
            <div class="item-stats">
                <h4>{{item.system.encumbrance}}</h4>
            </div>
            {{#if ../showReadied}}
                <div class="item-stats">
                    <input class="readiable" data-item-id="{{item._id}}" type="checkbox" {{{canReadyArmor item
                                                                                                             ../armor}}} {{isChecked
                            item.system.readied}}/>
                </div>
            {{/if}}
            <div class="item-controls">
                <a class="item-control item-edit" title="Edit Armor"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Armor"><i class="fas fa-trash"></i></a>
            </div>
        </li>
        <div class="item-description hidden">{{{item.system.description}}}</div>
    {{/each}}
</ol>

