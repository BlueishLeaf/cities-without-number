{{!-- Verbs --}}
<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">Verbs</div>
    <div class="item-stats">Access</div>
    <div class="item-stats">Skill Mod</div>
    <div class="item-stats" title="Self-Terminating">Self-Term.</div>
    <div class="item-stats">Targets</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create Verb" data-type="verb"><i class="fas fa-plus"></i> Add</a>
    </div>
  </li>
  {{#each verb as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="rollable" data-roll-type="verb"><img class="rollable-img" src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
        </div>
        <h4 class="expandable">{{item.name}}</h4>
      </div>
      <div class="item-stats">
        <h4>{{item.system.accessCost}}</h4>
      </div>
      <div class="item-stats">
        <h4>{{item.system.skillCheckMod}}</h4>
      </div>
      <div class="item-stats">
        {{#if verb.system.selfTerminating}}
          <i class="fas fa-check" title="This program will self-terminate"></i>
        {{else}}
          <i class="fas fa-xmark" title="This program will not self-terminate"></i>
        {{/if}}
      </div>
      <div class="item-stats">
        <h4>{{item.system.targetTypes}}</h4>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit Verb"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete Verb"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    <div class="item-description hidden">{{{item.system.description}}}</div>
  {{/each}}
</ol>

