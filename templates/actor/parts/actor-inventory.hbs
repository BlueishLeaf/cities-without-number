<div class="resources grid grid-3col">
  <div class="resource flex-group-center">
    <label for="system.encumberance.stowed.value" class="resource-label">Stowed Items</label>
    <div class="resource-content flexrow flex-center flex-between">
    <input type="text" name="system.encumberance.stowed.value" disabled value="{{system.encumberance.stowed.value}}" data-dtype="Number"/>
    <span> / </span>
    <input type="text" name="system.encumberance.stowed.max" disabled value="{{system.encumberance.stowed.max}}" data-dtype="Number"/>
    </div>
  </div>

  <div class="resource flex-group-center">
    <label for="system.encumberance.readied.value" class="resource-label">Readied Items</label>
    <div class="resource-content flexrow flex-center flex-between">
    <input type="text" name="system.encumberance.readied.value" disabled value="{{system.encumberance.readied.value}}" data-dtype="Number"/>
    <span> / </span>
    <input type="text" name="system.encumberance.readied.max" disabled value="{{system.encumberance.readied.max}}" data-dtype="Number"/>
    </div>
  </div>

  <div class="resource flex-group-center">
    <label for="system.encumberance.currentReadied" class="resource-label">Money</label>
    <div class="resource-content flexrow flex-center flex-between">
      <input type="text" name="system.money" value="{{system.money}}" data-dtype="Number"/>
    </div>
  </div>
</div>

<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">Weapons</div>
    <div class="item-stats">Range</div>
    <div class="item-stats">Magazine</div>
    <div class="item-stats" title="Encumberance">Enc.</div>
    <div class="item-stats">Readied?</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create weapon" data-type="weapon"><i class="fas fa-plus"></i> Add</a>
    </div>
  </li>
  {{#each weapons as |weapon id|}}
    <li class="item flexrow" data-item-id="{{weapon._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="rollable" data-roll-type="weapon"><img src="{{weapon.img}}" title="{{weapon.name}}" width="24" height="24"/></a>
        </div>
        <h4>{{weapon.name}}</h4>
      </div>
      <div class="item-stats">
        <h4>{{weapon.system.range}}</h4>
      </div>
      <div class="item-stats">
        {{#if weapon.system.magazine}}
        <h4 class="{{#ifEquals weapon.system.magazine.value 0}}item-text-warning{{/ifEquals}}">{{weapon.system.magazine.value}}/{{weapon.system.magazine.max}}</h4>
        {{else}}
        <h4>N/A</h4>
        {{/if}}
      </div>
      <div class="item-stats">
        <h4>{{weapon.system.encumberance}}</h4>
      </div>
      <div class="item-stats">
        <input class="readiable" data-item-id="{{weapon._id}}" type="checkbox" {{isChecked weapon.system.readied}}/>
      </div>
      <div class="item-controls">
        <a class="item-control item-refresh" title="Reload Magazine"><i class="fas fa-arrows-rotate"></i></a>
        <a class="item-control item-edit" title="Edit Weapon"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete Weapon"><i class="fas fa-trash"></i></a>
      </div>
    </li>
  {{/each}}
</ol>

