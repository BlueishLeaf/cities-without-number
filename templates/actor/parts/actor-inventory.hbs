<!-- Inventory -->
<ol class="items-list">
    <li class="item flexrow items-header">
        <div class="item-name">Inventory</div>
        <div class="item-stats">Quantity</div>
        <div class="item-stats" title="Encumbrance">Enc.</div>
        {{#if showReadied}}
            <div class="item-stats">Readied?</div>
        {{/if}}
        <div class="item-controls">
            <a class="item-control item-create" title="Create Item" data-type="gear"><i class="fas fa-plus"></i> Add</a>
        </div>
    </li>
    {{#each inventory as |item id|}}
        <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
                <div class="item-image">
                    <a class="rollable" data-roll-type="gear"><img class="rollable-img" src="{{item.img}}"
                                                                   title="{{item.name}}" width="24" height="24"/></a>
                </div>
                <h4 class="expandable">{{item.name}}</h4>
            </div>
            <div class="item-stats">
                <h4>{{item.system.quantity}}</h4>
            </div>
            <div class="item-stats">
                {{#if item.system.wearable}}
                    <h4 title="This item has no encumbrance while worn">{{item.system.encumbrance}}/0</h4>
                {{else}}
                    <h4>{{item.system.encumbrance}}</h4>
                {{/if}}
            </div>
            {{#if ../showReadied}}
                <div class="item-stats">
                    <input class="readiable" data-item-id="{{item._id}}" type="checkbox" {{isChecked
                            item.system.readied}}/>
                </div>
            {{/if}}
            <div class="item-controls">
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
        </li>
        <div class="item-description hidden">{{{item.system.description}}}</div>
    {{/each}}
</ol>