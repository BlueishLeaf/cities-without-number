{{!-- Nodes --}}
<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">Nodes</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create Node" data-type="node"><i class="fas fa-plus"></i> Add</a>
    </div>
  </li>
  {{#each nodes as |node id|}}
    <li class="item flexrow" data-item-id="{{node._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="rollable" data-roll-type="node"><img class="rollable-img" src="{{node.img}}" title="{{node.name}}" width="24" height="24"/></a>
        </div>
        <h4 class="expandable">{{node.name}}</h4>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit Node"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete Node"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    <div class="item-description hidden">
      <p><b>Unblocked Connections:</b> {{node.system.unblockedConnections}}</p>
      <p><b>Blocked Connections:</b> {{node.system.blockedConnections}}</p>
      {{#if node.system.description}}
        <h5>Description</h5>
        {{{node.system.description}}}
      {{/if}}
    </div>
  {{/each}}
</ol>

{{!-- Demons --}}
<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">Demons</div>
    <div class="item-stats">HP</div>
    <div class="item-stats">Commands</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create Demon" data-type="demon"><i class="fas fa-plus"></i> Add</a>
    </div>
  </li>
  {{#each demons as |demon id|}}
    <li class="item flexrow" data-item-id="{{demon._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="rollable" data-roll-type="demon"><img class="rollable-img" src="{{demon.img}}" title="{{demon.name}}" width="24" height="24"/></a>
        </div>
        <h4 class="expandable">{{demon.name}}</h4>
      </div>
      <div class="item-stats">
        <h4>{{demon.system.health.value}}/{{demon.system.health.max}}</h4>
      </div>
      <div class="item-stats">
        <h4>{{demon.system.maxCommandLines}}</h4>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit Demon"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete Demon"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    <div class="item-description hidden">
      {{#if demon.system.commandLines}}
        <h5>Command Lines</h5>
        {{#each demon.commandLine as |commandLine|}}
          <p>{{commandLine}}</p>
        {{/each}}
      {{/if}}
      {{#if demon.system.description}}
        <h5>Description</h5>
        {{{demon.system.description}}}
      {{/if}}
    </div>
  {{/each}}
</ol>