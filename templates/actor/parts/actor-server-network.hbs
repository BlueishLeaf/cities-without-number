{{!-- Nodes --}}
<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">Nodes</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create Node" data-type="node"><i class="fas fa-plus"></i> Add</a>
    </div>
  </li>
  {{#each nodes as |node id|}}
    <li class="item flexrow" data-item-id="{{node._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="rollable" data-roll-type="node"><img class="rollable-img" src="{{node.img}}" title="{{node.name}}" width="24" height="24"/></a>
        </div>
        <h4 class="expandable">{{node.name}}</h4>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit Node"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete Node"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    <div class="item-description hidden">
      <p><b>Unblocked Connections:</b> {{node.system.unblockedConnections}}</p>
      <p><b>Blocked Connections:</b> {{node.system.blockedConnections}}</p>
      {{#if node.system.description}}
        <h5>Description</h5>
        {{{node.system.description}}}
      {{/if}}
    </div>
  {{/each}}
</ol>