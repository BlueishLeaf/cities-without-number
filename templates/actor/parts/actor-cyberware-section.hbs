<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">{{sectionLabel}} Ware</div>
    <div class="item-stats">Effect</div>
    <div class="item-stats" title="System Strain">Sys. Strain</div>
    {{#isSettingEnabled "useCyberAlienation"}}
      <div class="item-stats" title="Alienation Cost">Alienation</div>
    {{/isSettingEnabled}}
    <div class="item-controls">
      <a class="item-control item-create" title="Create {{sectionLabel}} Ware" data-type="cyberware" data-subType="{{section}}"><i class="fas fa-plus"></i> Add</a>
    </div>
  </li>
  {{#each cyber as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="rollable" data-roll-type="cyberware"><img class="rollable-img" src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
        </div>
        <h4 class="expandable">{{item.name}}
          {{#if item.system.implantComplications}}
              <i title="This cyberware has complications!" class="item-text-warning fas fa-triangle-exclamation"></i>
          {{/if}}
          {{#isSettingEnabled "useCyberAlienation"}}
            {{#if item.system.chromeSyndromes}}
                <i title="This cyberware is inducing chrome syndromes!" class="item-text-syndrome fas fa-skull"></i>
            {{/if}}
          {{/isSettingEnabled}}
        </h4>

      </div>
      <div class="item-stats">
        <h4>{{item.system.effect}}</h4>
      </div>
      <div class="item-stats">
        <h4>{{item.system.systemStrain}}</h4>
      </div>
      {{#isSettingEnabled "useCyberAlienation"}}
        <div class="item-stats">
          <h4>{{item.system.alienationCost}}</h4>
        </div>
      {{/isSettingEnabled}}
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit {{sectionLabel}} Ware"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete {{sectionLabel}} Ware"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    <div class="item-description hidden">
        {{#if item.system.implantComplications}}
            {{#each item.system.implantComplications as |complicationId id|}}
                {{#formatChromeDefect complicationId ../../implantComplication "item-text-warning"}}{{/formatChromeDefect}}
            {{/each}}
            <hr>
        {{/if}}
      {{#isSettingEnabled "useCyberAlienation"}}
        {{#if item.system.chromeSyndromes}}
          {{#each item.system.chromeSyndromes as |syndromeId id|}}
            {{#formatChromeDefect syndromeId ../../chromeSyndrome "item-text-syndrome"}}{{/formatChromeDefect}}
          {{/each}}
          <hr>
        {{/if}}
      {{/isSettingEnabled}}
      {{{item.system.description}}}
    </div>
  {{/each}}
</ol>