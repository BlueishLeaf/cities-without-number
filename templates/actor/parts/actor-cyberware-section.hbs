<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">{{sectionLabel}} Ware</div>
    <div class="item-stats">Effect</div>
    <div class="item-stats" title="System Strain">Sys. Strain</div>
    <div class="item-controls">
      <a class="item-control item-create" title="Create {{sectionLabel}} Ware" data-type="cyberware" data-subType="{{section}}"><i class="fas fa-plus"></i> Add</a>
    </div>
  </li>
  {{#each cyber as |item id|}}
    <li class="item flexrow" data-item-id="{{item._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="rollable" data-roll-type="cyberware"><img class="rollable-img" src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
        </div>
        {{#if item.system.isDefective}}
          <h4 class="expandable item-text-warning" title="This cyberware is defective!">{{item.name}} <i class="fas fa-triangle-exclamation"></i></h4>
        {{else}}
          <h4 class="expandable">{{item.name}}</h4>
        {{/if}}
      </div>
      <div class="item-stats">
        <h4>{{item.system.effect}}</h4>
      </div>
      <div class="item-stats">
        <h4>{{item.system.systemStrain}}</h4>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="Edit {{sectionLabel}} Ware"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="Delete {{sectionLabel}} Ware"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    <div class="item-description hidden">
      {{#if item.system.isDefective}}
        <h4 class="item-text-warning"><b>{{item.system.defect}}</b></h4>
      {{/if}}
      {{{item.system.description}}}
    </div>
  {{/each}}
</ol>