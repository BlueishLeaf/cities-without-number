<header class="sheet-header">
    <div class="header-portrait">
        <div class="form-group">
            <input type="text" name="name" class="input-corporate" placeholder="Identity" value="{{actor.name}}">
        </div>
        <div class="portrait-container">
            <img class="portrait-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
        </div>
    </div>
    <div class="header-fields">
        <div class="resources grid grid-2col">
            <!-- HP Bar -->
            <div class="status-bar-container">
                <div class="status-icon hp-icon">
                    <svg class="icon-default" viewBox="0 0 24 24">
                        <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"></path>
                    </svg>
                    <svg class="configurable icon-cog" viewBox="0 0 24 24" data-config-type="health" data-config-label="Health Points">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                    </svg>
                </div>
                <div class="bar-wrapper">
                    <div class="hp-bar" id="hp-bar" style="width: {{system.health.percentage}}"></div>
                    <div class="bar-value">
                        <input type="number" id="current-hp" class="current-value" data-dtype="Number" name="system.health.value" value="{{system.health.value}}" min="0" max="{{system.health.max}}">
                        <span class="max-value">/ {{system.health.max}}</span>
                    </div>
                </div>
            </div>

            <!-- Armor Bar -->
            <div class="status-bar-container">
                <div class="status-icon armor-icon">
                    <svg class="icon-default" viewBox="0 0 24 24">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                    </svg>
                    <svg class="configurable icon-cog" viewBox="0 0 24 24" data-config-type="damageSoak" data-config-label="Damage Soak">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                    </svg>
                </div>
                <div class="bar-wrapper">
                    <div class="armor-bar" id="armor-bar" style="width: {{system.damageSoak.percentage}}"></div>
                    <div class="bar-value">
                        <input type="number" id="current-armor" class="current-value" name="system.damageSoak.value" value="{{system.damageSoak.value}}" min="0" max="{{system.damageSoak.max}}">
                        <span class="max-value">/ {{system.damageSoak.max}}</span>
                    </div>
                </div>
            </div>

            <!-- System Strain Bar with Permanent Strain -->
            <div class="status-bar-container">
                <div class="status-icon strain-icon">
                    <svg class="icon-default" viewBox="0 0 24 24">
                        <path d="M13 2 3 14h9l-1 8 10-12h-9l1-8z"></path>
                    </svg>
                    <svg class="configurable icon-cog" viewBox="0 0 24 24" data-config-type="systemStrain" data-config-label="System Strain">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                    </svg>
                </div>
                <div class="bar-wrapper">
                    <div class="strain-bar" id="strain-bar" style="width: {{system.systemStrain.percentage}}"></div>
                    <div class="permanent-strain-bar" id="perm-strain-bar"></div>
                    <div class="bar-value">
                        <input type="number" id="current-strain" class="current-value" name="system.systemStrain.value" value="{{system.systemStrain.value}}" min="{{system.systemStrain.permanent}}" max="{{system.systemStrain.max}}">
                        <span class="max-value">/ {{system.systemStrain.max}}</span>
                    </div>
                </div>
            </div>

            <!-- XP Progress Bar -->
            <div class="status-bar-container">
                <div class="status-icon xp-icon">
                    <svg class="icon-default" viewBox="0 0 24 24">
                        <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
                    </svg>
                    <svg class="configurable icon-cog" viewBox="0 0 24 24" data-config-type="experience" data-config-label="Experience">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                    </svg>
                </div>
                <div class="bar-wrapper">
                    <div class="xp-bar" id="xp-bar" style="width: {{system.xp.percentage}}"></div>
                    <div class="bar-value">
                        <input type="number" id="current-xp" class="current-value" name="system.xp.value" value="{{system.xp.value}}" min="0" max="{{system.xp.nextLevel}}">
                        <span class="max-value">/ {{system.xp.nextLevel}}</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="resources grid grid-3col">
            <!-- Melee AC Box -->
            <div class="ac-box melee">
                <div class="ac-icon melee">
                    <svg class="icon-default" viewBox="0 0 24 24">
                        <path d="M14.5 17.5L3 6V3h3l11.5 11.5"></path>
                        <path d="M13 19l6-6"></path>
                        <path d="M16 16l4 4"></path>
                        <path d="M19 21l2-2"></path>
                    </svg>
                    <svg class=" configurable icon-cog" viewBox="0 0 24 24" data-config-type="armorClass" data-config-label="Armor Class">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                    </svg>
                </div>
                <div class="tooltip">
                    <div class="ac-value melee">{{system.armorClass.melee}}</div>
                    <div class="tooltip-text melee">
                        <div class="tooltip-title melee">Melee AC Breakdown</div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Base Value:</span>
                            <span class="tooltip-value">10</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Dexterity Modifier:</span>
                            <span class="tooltip-value positive">+2</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Armor Bonus:</span>
                            <span class="tooltip-value positive">+3</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Shield Bonus:</span>
                            <span class="tooltip-value positive">+1</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Size Modifier:</span>
                            <span class="tooltip-value">0</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Cybernetic Enhancement:</span>
                            <span class="tooltip-value positive">+1</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Other Modifiers:</span>
                            <span class="tooltip-value negative">-1</span>
                        </div>
                        <div class="tooltip-total">
                            <span class="tooltip-total-label">Total Melee AC:</span>
                            <span class="tooltip-total-value melee">16</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Ranged AC Box -->
            <div class="ac-box ranged">
                <div class="ac-icon ranged">
                    <svg class="icon-default" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path d="m19 19-3-3"></path>
                        <path d="m5 5 3 3"></path>
                        <path d="m19 5-3 3"></path>
                        <path d="m5 19 3-3"></path>
                        <path d="M2 12h4"></path>
                        <path d="M18 12h4"></path>
                        <path d="M12 2v4"></path>
                        <path d="M12 18v4"></path>
                    </svg>
                    <svg class="configurable icon-cog" viewBox="0 0 24 24" data-config-type="armorClass" data-config-label="Armor Class">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                    </svg>
                </div>
                <div class="tooltip">
                    <div class="ac-value ranged">{{system.armorClass.ranged}}</div>
                    <div class="tooltip-text ranged">
                        <div class="tooltip-title ranged">Ranged AC Breakdown</div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Base Value:</span>
                            <span class="tooltip-value">10</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Dexterity Modifier:</span>
                            <span class="tooltip-value positive">+2</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Armor Bonus:</span>
                            <span class="tooltip-value positive">+1</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Cover Bonus:</span>
                            <span class="tooltip-value positive">+0</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Size Modifier:</span>
                            <span class="tooltip-value">0</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Cybernetic Enhancement:</span>
                            <span class="tooltip-value positive">+2</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Other Modifiers:</span>
                            <span class="tooltip-value negative">-1</span>
                        </div>
                        <div class="tooltip-total">
                            <span class="tooltip-total-label">Total Ranged AC:</span>
                            <span class="tooltip-total-value ranged">14</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Trauma Target Box -->
            <div class="ac-box trauma">
                <div class="ac-icon trauma">
                    <svg class="icon-default" viewBox="0 0 24 24">
                        <path d="M10.29 3.86 1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                        <line x1="12" y1="9" x2="12" y2="13"></line>
                        <line x1="12" y1="17" x2="12.01" y2="17"></line>
                    </svg>
                    <svg class="configurable icon-cog" viewBox="0 0 24 24" data-config-type="traumaTarget" data-config-label="Trauma Target">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                    </svg>
                </div>
                <div class="tooltip">
                    <div class="ac-value trauma">{{system.traumaTarget.total}}</div>
                    <div class="tooltip-text trauma">
                        <div class="tooltip-title trauma">Trauma Target Breakdown</div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Base Value:</span>
                            <span class="tooltip-value">10</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Body Modifier:</span>
                            <span class="tooltip-value positive">+1</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Cybernetic Hardening:</span>
                            <span class="tooltip-value positive">+2</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Trauma Dampeners:</span>
                            <span class="tooltip-value positive">+1</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Size Modifier:</span>
                            <span class="tooltip-value">0</span>
                        </div>
                        <div class="tooltip-row">
                            <span class="tooltip-label">Neural Burnout:</span>
                            <span class="tooltip-value negative">-2</span>
                        </div>
                        <div class="tooltip-total">
                            <span class="tooltip-total-label">Total Trauma Target:</span>
                            <span class="tooltip-total-value trauma">12</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>