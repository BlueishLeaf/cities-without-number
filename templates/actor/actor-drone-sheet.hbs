<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <div class="resources grid grid-2col">
        <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
        <div id="operator-select" class="resource flex-group-left">
          <label for="system.operator" class="resource-label">Operated by</label>
          <div class="resource-content flexrow flex-left flex-between">
            <select class="block-select" name="system.operator">
              {{selectOptions operators selected=system.operator}}
            </select>
          </div>
        </div>
      </div>

      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns.  --}}
      <div class="resources grid grid-3col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}
        <div class="resource flex-group-center">
          <label for="system.health.value" class="resource-label">Health</label>
          <div class="resource-content flexrow flex-center flex-between">
            <input type="text" name="system.health.value" value="{{system.health.value}}" data-dtype="Number"/>
            <span> / </span>
            <input type="text" name="system.health.max" value="{{system.health.max}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label class="resource-label" title="Armor Class (Melee/Ranged)">AC (Melee/Ranged)</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.armorClass.melee" value="{{system.armorClass.melee}}" data-dtype="Number"/>
          <span> / </span>
          <input type="text" name="system.armorClass.ranged" value="{{system.armorClass.ranged}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label class="resource-label">Movement</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input class="between-left" type="text" name="system.movement.speed" value="{{system.movement.speed}}" data-dtype="Number"/>
          <select class="block-select between-right" name="system.movement.type">
            {{selectOptions config.CWN.movementTypes selected=system.movement.type}}
          </select>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.traumaTarget" class="resource-label">Trauma Target</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.traumaTarget" value="{{system.traumaTarget}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.encumbrance" class="resource-label">Encumbrance</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.encumbrance" value="{{system.encumbrance}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.cost" class="resource-label">Cost</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.cost" value="{{system.cost}}" data-dtype="Number"/>
          </div>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="skills">Skills</a>
    <a class="item" data-tab="inventory">Fittings & Cargo</a>
    <a class="item" data-tab="description">Description</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Owned Features Tab --}}
    <div class="tab features" data-group="primary" data-tab="skills">
      <section class="grid grid-3col">
        <aside class="sidebar">

          {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
          use both the "grid" and "grid-Ncol" class where "N" can be any number
          from 1 to 12 and will create that number of columns.  --}}
          <div class="abilities flexcol">
            {{#each system.abilities as |ability key|}}
            <div class="ability flexrow flex-group-center">
              <label for="system.abilities.{{key}}.value" class="resource-label flexlarge align-left" data-label="{{ability.label}}">{{ability.label}}</label>
              <input type="text" name="system.abilities.{{key}}.value" value="{{ability.value}}" data-dtype="Number"/>
              <span class="ability-mod" data-label="{{ability.label}}">{{numberFormat ability.mod decimals=0 sign=true}}</span>
            </div>
            {{/each}}
          </div>
        </aside>

        {{!-- For the main skills list, span the right two columns --}}
        <section class="main grid-span-2">
          {{!-- This is a Handlebars partial. They're stored in the `/parts` folder next to this sheet, and defined in module/helpers/templates.mjs --}}
          {{> "systems/cities-without-number/templates/actor/parts/actor-skills.hbs"}}
        </section>

      </section>

      <!-- Saves -->
      <section class="grid grid-3col">
        <aside class="sidebar">
          <div class="abilities flexcol">
            {{#each system.savingThrows.saveTargets as |save key|}}
            <div class="ability flexrow flex-group-center">
              <label for="system.savingThrows.saveTargets.{{key}}.value" class="resource-label flexlarge align-left rollable" data-roll-type="save" data-save="{{key}}" data-label="{{save.label}}">{{save.label}}</label>
              <input type="text" name="system.savingThrows.saveTargets.{{key}}.value" value="{{save.value}}" data-dtype="Number"/>
            </div>
            {{/each}}
          </div>
        </aside>
      </section>
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{> "systems/cities-without-number/templates/actor/parts/actor-biography.hbs"}}
    </div>

    {{!-- Inventory Tab --}}
    <div class="tab items" data-group="primary" data-tab="inventory">
       {{> "systems/cities-without-number/templates/actor/parts/actor-machine-inventory.hbs"}}
    </div>
  </section>
</form>

