<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">
  {{#if limited}}
    {{> "systems/cities-without-number/templates/actor/parts/actor-limited.hbs"}}
  {{else}}
    {{!-- Sheet Header --}}
    <header class="sheet-header">
      <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
      <div class="header-fields">
        <div class="resources grid grid-4col">
          <h1 class="charname grid-span-3"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
          <div class="resource flex-group-left">
            <label for="system.background" class="resource-label">Background</label>
            <input name="system.background" type="text" value="{{actor.system.background}}"/>
          </div>
        </div>

        <div class="resources grid grid-3col">

          {{!-- "flex-group-center" is also defined in the _grid.scss file
          and it will add a small amount of padding, a border, and will
          center all of its child elements content and text. --}}
          <div class="resource flex-group-center">
            <label for="system.health.value" class="resource-label">Health</label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="number" name="system.health.value" value="{{system.health.value}}" data-dtype="Number"/>
              <i class="fas fa-slash-forward"></i>
              <input type="number" name="system.health.max" value="{{system.health.max}}" data-dtype="Number"/>
            </div>
          </div>

          <div class="resource flex-group-center">
            <label for="system.damageSoak.value" class="resource-label">Damage Soak <span title="Configure Damage Soak" class="configurable fas fa-gear" data-config-type="damageSoak" data-config-label="Damage Soak"></span></label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="number" name="system.damageSoak.value" value="{{system.damageSoak.value}}" data-dtype="Number"/>
              <i class="fas fa-slash-forward"></i>
              <input type="number" name="system.damageSoak.max" disabled value="{{system.damageSoak.max}}" data-dtype="Number"/>
            </div>
          </div>

          <div class="resource flex-group-center">
            <label for="system.systemStrain.value" class="resource-label">System Strain <span title="Configure System Strain" class="configurable fas fa-gear" data-config-type="systemStrain" data-config-label="System Strain"></span></label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="number" name="system.systemStrain.temporary" value="{{system.systemStrain.temporary}}" data-dtype="Number"/>
              <span id="totalSystemStrain" title="Total Current System Strain">({{system.systemStrain.value}})</span>
              <i class="fas fa-slash-forward"></i>
              <input type="number" name="system.systemStrain.max" disabled value="{{system.systemStrain.max}}" data-dtype="Number"/>
            </div>
          </div>


          <div class="resource flex-group-center">
            <label class="resource-label">AC (Melee/Ranged) <span title="Configure Armor Class" class="configurable fas fa-gear" data-config-type="armorClass" data-config-label="Armor Class"></span></label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="number" name="system.armorClass.melee" disabled value="{{system.armorClass.melee}}" data-dtype="Number"/>
              <i class="fas fa-slash-forward"></i>
              <input type="number" name="system.armorClass.ranged" disabled value="{{system.armorClass.ranged}}" data-dtype="Number"/>
            </div>
          </div>

          <div class="resource flex-group-center">
            <label for="system.traumaTarget.total" class="resource-label">Trauma Target <span title="Configure Trauma Target" class="configurable fas fa-gear" data-config-type="traumaTarget" data-config-label="Trauma Target"></span></label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="number" name="system.traumaTarget.total" disabled value="{{system.traumaTarget.total}}" data-dtype="Number"/>
            </div>
          </div>

          <div class="resource flex-group-center">
            <label for="system.attackBonus" class="resource-label">Attack Bonus</label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="number" name="system.attackBonus" value="{{system.attackBonus}}" data-dtype="Number"/>
            </div>
          </div>

          <div class="resource flex-group-center">
            <label for="system.movement.speed" class="resource-label">Movement Speed</label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="number" name="system.movement.speed" value="{{system.movement.speed}}" data-dtype="Number"/>
            </div>
          </div>

          <div class="resource flex-group-center">
            <label for="system.xp" class="resource-label">XP</label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="number" name="system.xp.value" value="{{system.xp.value}}" data-dtype="Number"/>
              <i class="fas fa-slash-forward"></i>
              <input type="number" name="system.xp.nextLevel" value="{{system.xp.nextLevel}}" data-dtype="Number"/>
            </div>
          </div>

          <div class="resource flex-group-center">
            <label for="system.level" class="resource-label">Level</label>
            <div class="resource-content flexrow flex-center flex-between">
              <input type="number" name="system.level" value="{{system.level}}" data-dtype="Number"/>
            </div>
          </div>
        </div>
      </div>
    </header>

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
      {{!-- Default tab is specified in actor-sheet.mjs --}}
      <a class="item" data-tab="stats">Stats</a>
      <a class="item" data-tab="skills">Skills</a>
      <a class="item" data-tab="inventory">Inventory</a>
      <a class="item" data-tab="cyberware">Cyberware</a>
      <a class="item" data-tab="features">Features</a>
      <a class="item" data-tab="biography">Biography</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

      {{!-- Stats Tab --}}
      <div class="tab features" data-group="primary" data-tab="stats">
        {{> "systems/cities-without-number/templates/actor/parts/actor-stats.hbs"}}
      </div>

      {{!-- Skills Tab --}}
      <div class="tab features" data-group="primary" data-tab="skills">
        {{> "systems/cities-without-number/templates/actor/parts/actor-character-skills.hbs"}}
      </div>

      {{!-- Biography Tab --}}
      <div class="tab biography max-height" data-group="primary" data-tab="biography">
        {{> "systems/cities-without-number/templates/actor/parts/actor-character-biography.hbs"}}
      </div>

      {{!-- Inventory Tab --}}
      <div class="tab items" data-group="primary" data-tab="inventory">
        {{> "systems/cities-without-number/templates/actor/parts/actor-character-equipment.hbs"}}
      </div>

      {{!-- Cyberware Tab --}}
      <div class="tab items" data-group="primary" data-tab="cyberware">
        {{> "systems/cities-without-number/templates/actor/parts/actor-total-cyberware.hbs" showMaintenanceCost=true}}
      </div>

      {{!-- Features Tab --}}
      <div class="tab features" data-group="primary" data-tab="features">
        {{> "systems/cities-without-number/templates/actor/parts/actor-features.hbs"}}
      </div>
    </section>
  {{/if}}
</form>

