<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">
  {{#if limited}}
    {{> "systems/cities-without-number/templates/actor/parts/actor-limited.hbs"}}
  {{else}}
    {{!-- Sheet Header --}}
    {{> "systems/cities-without-number/templates/actor/parts/actor-character-header.hbs"}}

    {{!-- Sheet Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
      {{!-- Default tab is specified in actor-sheet.mjs --}}
      <a class="item" data-tab="stats">Stats</a>
      <a class="item" data-tab="skills">Skills</a>
      <a class="item" data-tab="inventory">Inventory</a>
      <a class="item" data-tab="cyberware">Cyberware</a>
      <a class="item" data-tab="features">Features</a>
      <a class="item" data-tab="biography">Biography</a>
    </nav>

    {{!-- Sheet Body --}}
    <section class="sheet-body">

      {{!-- Stats Tab --}}
      <div class="tab features" data-group="primary" data-tab="stats">
        {{> "systems/cities-without-number/templates/actor/parts/actor-stats.hbs"}}
      </div>

      {{!-- Skills Tab --}}
      <div class="tab features" data-group="primary" data-tab="skills">
        {{> "systems/cities-without-number/templates/actor/parts/actor-character-skills.hbs"}}
      </div>

      {{!-- Biography Tab --}}
      <div class="tab biography max-height" data-group="primary" data-tab="biography">
        {{> "systems/cities-without-number/templates/actor/parts/actor-character-biography.hbs"}}
      </div>

      {{!-- Inventory Tab --}}
      <div class="tab items" data-group="primary" data-tab="inventory">
        {{> "systems/cities-without-number/templates/actor/parts/actor-character-equipment.hbs"}}
      </div>

      {{!-- Cyberware Tab --}}
      <div class="tab items" data-group="primary" data-tab="cyberware">
        {{> "systems/cities-without-number/templates/actor/parts/actor-total-cyberware.hbs" showCyberwearHeader=true}}
      </div>

      {{!-- Features Tab --}}
      <div class="tab features" data-group="primary" data-tab="features">
        {{> "systems/cities-without-number/templates/actor/parts/actor-features.hbs"}}
      </div>
    </section>
  {{/if}}
</form>

