{
  "scripts": {
    "build": "npm run compileSCSS & npm run compileYMLtoLDB",
    "type-check": "tsc --noEmit",
    "compileSCSS": "sass styles/cwn.scss styles/cwn.css --style=expanded --no-source-map",
    "watchSCSS": "sass styles/cwn.scss styles/cwn.css --style=expanded --source-map --watch",
    "compileLDBtoYML": "node ./scripts/compileLDBtoYML.mjs",
    "compileYMLtoLDB": "node ./scripts/compileYMLtoLDB.mjs",
    "lint": "eslint .",
    "format": "prettier . --write",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@foundryvtt/foundryvtt-cli": "^1.0.4",
    "eslint": "^9.35.0",
    "fvtt-types": "github:League-of-Foundry-Developers/foundry-vtt-types#main",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.6",
    "prettier": "3.6.2",
    "sass": "^1.85.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  },
  "lint-staged": {
    "**/*": [
      "eslint . --quiet --fix",
      "prettier . --write --ignore-unknown"
    ]
  }
}
